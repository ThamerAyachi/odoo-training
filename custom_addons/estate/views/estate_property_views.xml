<?xml version="1.0"?>
<odoo>
    <!-- Action -->
    <record model="ir.actions.act_window" id="estate_property_action">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Tree -->
    <record model="ir.ui.view" id="estate_property_view_tree">
        <field name="name">estate.proprty.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Fields">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
                <field name="property_type_id" />
                <field name="estate_property_tag_ids"
                    widget="many2many_tags" />
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record model="ir.ui.view" id="estate_property_view_form">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="CustomForm">
                <header>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" />
                    <button name="action_sold" type="object" string="Sold" class="oe_highlight" />
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                        <p>
                            <field name="estate_property_tag_ids"
                                widget="many2many_tags" />
                        </p>
                    </h1>
                    <group>
                        <group>
                            <field name="property_type_id" />
                            <field name="postcode" />
                            <field name="date_availability" />
                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="best_price" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <group>
                                    <field name="description" />
                                    <field name="bedrooms" />
                                    <field name="living_area" />
                                    <field name="facades" />
                                    <field name="total_area" />
                                </group>
                                <group>
                                    <field name="garage" />
                                    <field name="garden" />
                                    <field name="garden_area"
                                        attrs="{'invisible': [('garden', '=', False)]}" />
                                    <field name="garden_orientation"
                                        attrs="{'invisible': [('garden', '=', False)]}" />
                                </group>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" />
                        </page>
                        <page string="Other Info">
                            <group>
                                <!-- <field name="state" /> -->
                                <field name="seller_id" />
                                <field name="buyer_id" />
                                <!-- <field name="state" /> -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search -->
    <record model="ir.ui.view" id="estate_property_view_search">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="CustomSearch">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="property_type_id" />
                <separator />
                <filter name="available" string="Available"
                    domain="['|', ('state', '=', 'new'), ('state','=', 'offer received') ]" />
                <group string="Group By" expand="1">
                    <filter name="postcode" string="Postcode" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>